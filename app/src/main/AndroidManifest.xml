<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mrshiehx.minecraft_versions_viewer">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:label="@string/activity_main_name"
            android:configChanges="screenSize|keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StableReleases"
            android:label="@string/activity_stable_releases_name" />
        <activity
            android:name=".SnapshotPreview"
            android:label="@string/activity_snapshot_preview_name" />
        <activity
            android:name=".Beta"
            android:label="@string/activity_beta_name" />
        <activity
            android:name=".Alpha"
            android:label="@string/activity_alpha_name" />
        <activity
            android:name=".Settings"
            android:label="@string/activity_settings_name" />
        <activity
            android:name=".About"
            android:label="@string/activity_about_name" />
    </application>

</manifest>